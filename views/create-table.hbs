<form action="/setting/table" method="POST">
  <div class="mb-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">新增座位</h1>
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="name">Table</label>
    <input class="form-control" type="text" name="name" id="name" placeholder="Enter table" value="{{table.name}}"
      required>
  </div>

  <button type="submit" class="btn btn-primary">新增</button>
</form>